{{#if sessionAccount.account.admin}}
<div class="dropdown btn btn-secondary btn-sm rounded">
    <div class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Transitions
    </div>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        {{#each states as |state|}}
        <button class="dropdown-item" {{action "transition" sprint.id state.id}}>{{state.name}}</button>
        {{/each}}
    </div>
</div>
{{/if}}
