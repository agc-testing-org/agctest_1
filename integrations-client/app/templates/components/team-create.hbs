<form {{action 'create' on="submit"}} class="mt-3">
    <div class="form-group">
        {{#if errorMessage}}<div class="alert alert-warning rounded text-center">{{errorMessage}}</div>{{/if}}
        <label>Team Name</label>
        {{input type="text" value=name placeholder="Your Company/Organization" class="form-control input-lg rounded"}}

        <label>Team Type</label>
        <div class="card-deck">
            {{#each plans as |plan|}}
                <div class="card rounded cursor-pointer" {{action "setType" plan.id}}>
                    <div class="card-block">
                        <h3 class="card-title text-capitalize">{{#if (eq planId plan.id)}}<i class="fa fa-check fa-fw" aria-hidden="true"></i>{{/if}}{{plan.name}}</h3>
                        <p class="card-text">{{plan.description}}</p>
                    </div>
                    <div class="card-footer text-center">
                        <small class="text-muted">for {{plan.title}}</small>
                    </div>
                </div>
            {{/each}}
        </div>

        <button type="submit" class="btn btn-outline-secondary btn-lg rounded mt-3 btn-block">Create</button>

    </div>
</form>
