<div class="list-group rounded text-left">
    <div class="list-group-item active rounded">
        <h4>Invitations</h4>
    </div>

    {{#each user_teams as |user|}}
        <div class="list-group-item rounded"> 
            <h4 class="line">
            {{#if user.accepted}}
                <span class="badge badge-info uppercase rounded">Accepted</span>
            {{/if}}
            {{#if user.user_first_name}}
                {{user.user_first_name}} {{user.user_last_name}}
            {{else}}
                {{user.user_email}}
            {{/if}}

            </h4>
            <small class="line text-muted">Invited by {{user.sender_first_name}} {{moment-from-now user.created_at}}{{#if user.accepted}}, accepted {{moment-from-now user.updated_at}}{{/if}}</small>
        </div>
    {{/each}}
</div>
