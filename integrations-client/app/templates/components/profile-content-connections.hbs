{{#if connections user}}

    <h4 class="about section">My Contacts</h4>
    <div class="list-group rounded text-left">
        {{#each connections as |connection|}}
        <div class="list-group-item rounded highlight-{{notification.read}}">
            <h4 class="line text-capitalize">
                {{#link-to "profile" connection.user_profile.id}}{{connection.first_name}} {{connection.last_name}} {{#if connection.user_profile.title}}({{user-profile-descriptor user_profile=connection.user_profile class="d-inline"}}){{/if}}{{/link-to}}
            </h4>
            <p class="line"><span class="text-muted"><strong>E:</strong></span> {{connection.email}}</p>
            <small class="line text-muted">{{moment-from-now connection.created_at}}</small>

        {{#unless (eq connection.user_id user.id)}}
        {{#unless (eq connection.id 0)}}
            <p class="line">
                {{#if (eq connection.read false)}}
                {{connection-read request=connection class="d-inline"}}
                <span class="text-capitalize">{{#link-to "profile" connection.user_id}}{{connection.first_name}}{{/link-to}}</span>
                is interested in contacting you. Would you like to share your contact information?
                {{else}}
                {{connection-confirm request=connection class="d-inline" hide_profile=true}}
                {{/if}}
            </p>
        {{/unless}}
        {{/unless}}
        </div>
        {{/each}}
    </div>

{{else}}
<div class="overview bg-nav rounded p-3 mb-2">
    <div class="text-left">
        <h3>No contacts</h3>
    </div>
</div>
{{/if}}


