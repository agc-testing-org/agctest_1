<ul class="list-group">
    {{#each user_teams as |user|}}
        <li class="list-group-item">
            <div class="stack">
            {{#if user.accepted}}
                <span class="badge badge-info uppercase rounded">Accepted</span>
            {{/if}}
            {{#if user.user_first_name}}
                {{user.user_first_name}} {{user.user_last_name}}
            {{else}}
                {{user.user_email}}
            {{/if}}

            </div>
            <small class="stack text-muted">Invited by {{user.sender_first_name}} {{moment-from-now user.created_at}} {{#if user.accepted}}, accepted {{moment-from-now user.updated_at}}{{/if}}</small>
        </li>
    {{/each}}
</ul>
