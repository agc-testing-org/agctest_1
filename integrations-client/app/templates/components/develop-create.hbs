<form class="mt-3">
    <div class="form-group">
            {{#if errorMessage}}<div class="alert alert-warning rounded text-center">{{errorMessage}}</div>{{/if}}

            {{#unless sessionAccount.account.github}}
                <h3 class="text-center">
                    {{user-login-oauth provider="github" as_text=true text="Sign in with Github" refresh="refresh" class="d-inline"}} to fetch your github projects
                </h3>
            {{else}}
                {{#unless project}}
                <div class="dropdown btn btn-secondary btn-block rounded">
                    <div class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Project List
                    </div>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        {{#each repositories as |repository|}}
                            <button class="dropdown-item" {{action "createProject" repository.owner repository.name}}>{{repository.owner}}/{{repository.name}}</button>
                        {{/each}}
                    </div>
                </div>
                {{else}}
                    <h3 class="text-center">
                        created {{#link-to "develop.project" project.id}}{{project.org}}/{{project.name}}{{/link-to}}
                    </h3>
                {{/unless}}
            {{/unless}}
    </div>
</form>

