<div class="vertical-align-hold">
    <div class="vertical-align-cell">
        <div class="overview">
        <div class="text-center">
                {{#each requests as |request|}}
                {{#if (eq request.confirmed "1")}}
                <h3>You've requested a contact information!<br>
                Your request is under review.</h3>
                {{else if (eq request.confirmed "3")}}
                <h3>You've already requested a contact information.<br>
                User is not ready to share contact information.</h3>
                {{else if (eq request.confirmed "2")}}
                <h3>User has confirmed your request.<br>
                Please, see your contacts.</h3>
                {{/if}}
                {{/each}}
                </div>
        </div>
    </div>
</div>
