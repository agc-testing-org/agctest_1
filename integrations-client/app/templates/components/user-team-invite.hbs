{{#if (or (eq default_seat_name "sponsored") (eq default_seat_name "priority"))}}
    <h3>Invite Talent</h3>
    <div class="about section">Send email invitations to talent that you'd like to be evaluated and we will keep you up-to-date on any feedback the candidate receives</div>
{{else if (eq default_seat_name "member") }}
    <h3>Invite Your Co-Workers</h3>
    <div class="about section">Send email invitations to people that you'd like to share talent and contacts with</div>
{{else}}
    <h3 class="text-capitalize">Invite {{default_seat_name}}</h3>
{{/if}}

{{user-team-share-invite default_seat_name=default_seat_name default_seat_id=default_seat_id team=team jobs=jobs refresh="refresh"}}

