
        {{#if connections}}
        <div class="full">
            <h3>Contacts</h3>
            {{#each connections as |connection|}}
                <div class="sprint">
                    <div class="title text-capitalize">{{connection.first_name}} {{connection.last_name}}</div>
                    <div class="description">
                        <span class="text-muted">E</span> {{connection.email}}
                    </div>
                    <div class="date text-muted">{{moment-from-now connection.updated_at}}</div>
                </div>
            {{/each}}
        </div>
        {{else}}
        <div class="vertical-align-hold">
            <div class="vertical-align-cell">
                <div class="overview">
                    <div class="text-center">
                        <h3>No contacts</h3>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
