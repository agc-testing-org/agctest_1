
        {{#if connections}}
        <div class="full">

            <div class="list-group rounded text-left">
                <div class="list-group-item active rounded">
                    <h4>My Contacts</h4>
                </div>

                {{#each connections as |connection|}}
                    <div class="list-group-item rounded highlight-{{notification.read}}">
                        <h4 class="line text-capitalize">{{connection.first_name}} {{connection.last_name}}</h4>
                        <p class="line"><span class="text-muted">E:</span> {{connection.email}}</p>
                        <small class="line text-muted">{{moment-from-now connection.updated_at}}</small>
                    </div>
                {{/each}}
            </div>
        </div>
        {{else}}
        <div class="vertical-align-hold">
            <div class="vertical-align-cell">
                <div class="overview">
                    <div class="text-center">
                        <h3>No contacts</h3>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
