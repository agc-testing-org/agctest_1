<div class="vertical-align-hold">
    <div class="vertical-align-cell">
        <div class="overview text-left">
            {{#unless params.section}}
            <div class="feedback_graphic_hold hidden-sm-down">
                <div class="feedback_graphic"></div>
            </div>
            {{/unless}}
            
            {{#if (eq params.section "connect")}}
                {{#unless user.title}}
                <h3 class="description mb-5">Before we continue, connect Wired7 and LinkedIn to <strong>anonymously share your background</strong> with others when working on a team</h3>
                <h3 class="description text-center">{{user-login-oauth provider="linkedin" refresh="refresh" lg=true}}</h3>
                {{else}}
                <h2 class="name text-center mb-5">{{user-profile-descriptor user_profile=user multiple_lines=true}}</h2>
                <h3 class="description">Looks good! That's what other users will know about you.  
                {{#link-to "welcome" (query-params section="sprint")}}Continue{{/link-to}}
                </h3>
                {{/unless}}
            {{/if}}

            {{#if (eq params.section "sprint")}}
                <div class="feedback_graphic_hold hidden-sm-down">
                    <div class="sprint_graphic"></div>
                </div>
            {{/if}}

            {{#if (eq params.section "team")}}
            <div class="text-center">
                <div class="about section text-capitalize">Your Roles</div>
                {{profile-overview-skillsets-roles user=user items=roles type="role" class="skillsets"}}
                <div class="about section text-capitalize">Your Skillsets</div>
                {{profile-overview-skillsets-roles user=user items=skillsets type="skillset" class="skillsets"}}
            </div>
            {{/if}}
        </div>
    </div>
</div>
