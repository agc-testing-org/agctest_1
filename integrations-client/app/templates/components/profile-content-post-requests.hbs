<div class="vertical-align-hold">
    <div class="vertical-align-cell">
        <div class="overview">
        <div class="text-center">
                {{#each requests as |request|}}
                {{#if (eq request.confirmed "1")}}
                <h3>You've requested contact information!</h3>
                <h3>Your request is under review.</h3>
                {{else if (eq request.confirmed "3")}}
                <h3>You've already sent a contact request!</h3>
                <h3>This user is not ready to share contact information with you.</h3>
                {{else if (eq request.confirmed "2")}}
                <h3>This user has confirmed your request!</h3>
                <h3>View {{#link-to "me.connections"}}my contacts{{/link-to}}.</h3>
                {{/if}}
                {{/each}}
                </div>
        </div>
    </div>
</div>
