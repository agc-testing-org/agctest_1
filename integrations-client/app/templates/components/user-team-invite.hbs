<form {{action 'invite' team.id on="submit"}} class="mt-3">
    <div class="form-group">
        <label>Email Address</label>
        {{input type="text" value=email placeholder="name@example.com" class="form-control input-lg rounded"}}
      
        {{#if member}}
            {{input type="hidden" value=default_seat_id}}
        {{else}}
            {{input type="hidden" value=default_seat_id}}
        {{/if}}

        {{#if (greater-than team.seats.length 2)}}
            <div class="dropdown mb-5">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Seat Types
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    {{#each team.seats as |seat|}}
                        <a class="dropdown-item" {{action "selectSeat" seat.id}}>{{seat.name}}</a>
                    {{/each}}
                </div>
            </div>
        {{/if}}

        <button type="submit" class="btn btn-outline-secondary btn-lg rounded mb-5 btn-block">Invite</button>

    </div>
</form>
