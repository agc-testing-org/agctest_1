<form {{action 'reset' on="submit"}} class="register-form">
    <div class="text-center">
        {{#if errorMessage}}<div class="alert alert-warning">{{errorMessage}}</div>{{/if}}
        {{input type="email" value=email placeholder="Email" class="form-control input-lg margin-bottom-sm"}}

        <button type="submit" class="btn btn-info btn-lg">Reset Password</button>
    </div>
</form>
